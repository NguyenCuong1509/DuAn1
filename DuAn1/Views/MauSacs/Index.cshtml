@model IEnumerable<DuAn1.Models.MauSac>

@{
    ViewData["Title"] = "Danh sách màu sắc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Danh sách màu sắc</h2>

    <p>
        <a class="btn btn-success mb-3" asp-action="Create">➕ Thêm màu mới</a>
    </p>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="thead-dark">
            <tr>
                <th class="text-center">Tên màu sắc</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">@Html.DisplayFor(modelItem => item.TenMauSac)</td>
                    <td class="text-center">
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@item.MaMauSac">✏️ Sửa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
