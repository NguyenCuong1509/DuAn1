@model IEnumerable<DuAn1.Models.MauSac>

@{
    ViewData["Title"] = "Danh sách màu sắc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0 text-dark">🎨 Danh sách màu sắc</h3>
        <a class="btn btn-outline-primary" asp-action="Create">➕ Thêm màu mới</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="bg-light">
            <tr>
                <th style="width: 70%">Tên màu sắc</th>
                <th style="width: 30%" class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="2" class="text-center text-muted">Không có dữ liệu màu sắc.</td>
                </tr>
            }
            else
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">@item.TenMauSac</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-outline-warning" asp-action="Edit" asp-route-id="@item.MaMauSac">✏️ Sửa</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
