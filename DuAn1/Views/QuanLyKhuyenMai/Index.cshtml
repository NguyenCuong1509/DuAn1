@model IEnumerable<DuAn1.Models.KhuyenMai>

@{
    ViewData["Title"] = "Danh sách khuyến mãi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    h1 {
        color: #007bff;
        margin-bottom: 20px;
    }

    .table th {
        text-transform: uppercase;
        background-color: #007bff;
        color: white;
    }

    .badge-success {
        background-color: #28a745;
    }

    .badge-danger {
        background-color: #dc3545;
    }

    .badge-secondary {
        background-color: #6c757d;
    }
</style>

<div class="container mt-4">
    <h1>📋 Danh sách khuyến mãi</h1>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-info">
            ➕ Tạo khuyến mãi mới
        </a>
    </div>

    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.MaKhuyenMai)</th>
                <th>@Html.DisplayNameFor(model => model.TenKhuyenMai)</th>
                <th>@Html.DisplayNameFor(model => model.PhanTramGiam)</th>
                <th>@Html.DisplayNameFor(model => model.NgayBatDau)</th>
                <th>@Html.DisplayNameFor(model => model.NgayKetThuc)</th>
                <th>@Html.DisplayNameFor(model => model.TrangThai)</th>
                <th>@Html.DisplayNameFor(model => model.QuanLy)</th>
                <th>Chức năng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaKhuyenMai</td>
                    <td>@item.TenKhuyenMai</td>
                    <td>@item.PhanTramGiam %</td>
                    <td>@item.NgayBatDau?.ToString("dd/MM/yyyy")</td>
                    <td>@item.NgayKetThuc?.ToString("dd/MM/yyyy")</td>
                    <td>
                        <span class="badge
                                @(item.TrangThai == "Hoạt động" ? "badge-success" :
                                                            item.TrangThai == "Ngừng" ? "badge-danger" :
                                                            "badge-secondary")">
                        @item.TrangThai
                    </span>
                </td>
                <td>@item.QuanLy?.MaQuanLy</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaKhuyenMai" class="btn btn-info btn-sm">✏️ Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.MaKhuyenMai" class="btn btn-warning btn-sm">🔍 Chi tiết</a>
                </td>
            </tr>
                        }
        </tbody>
    </table>
</div>
