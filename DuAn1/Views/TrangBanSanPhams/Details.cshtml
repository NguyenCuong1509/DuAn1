@model DuAn1.Models.SanPham

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_chitiet.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết sản phẩm</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            padding-top: 0px;
        }

        .product-details {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-top: 20px;
        }

        .product-info dt {
            font-weight: bold;
            color: #343a40;
        }

        .product-info dd {
            margin-bottom: 15px;
            color: #495057;
        }

        .product-image {
            position: relative;
            overflow: hidden;
            width: 100%;
            height: 300px;
        }

            .product-image img {
                position: absolute;
                top: 50%;
                left: 50%;
                width: auto;
                height: 100%;
                transform: translate(-50%, -50%);
            }

        .action-links {
            margin-top: 20px;
        }

            .action-links a {
                margin-right: 10px;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="product-details">
            <div class="row">
                <!-- Hình ảnh (6 columns) -->
                <div class="col-md-6">
                    <div class="product-image">
                        <img src="@Model.HinhMinhHoa" alt="@Model.TenSanPham" style="width: 100%; height: auto;" />
                    </div>
                </div>

                <!-- Thông tin sản phẩm (6 columns) -->
                <div class="col-md-6">
                    <dl class="row product-info">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TenSanPham)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TenSanPham)</dd>
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DonGia)</dt>
                        <dd class="col-sm-8">@(@Model.DonGia.HasValue ? String.Format("{0:N0}", @Model.DonGia.Value) : "0") đ</dd>
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.SoLuongTonKho)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.SoLuongTonKho)</dd>
                    @*     <dt class="col-sm-4">@Html.DisplayNameFor(model => model.TrangThai)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.TrangThai)</dd> *@
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MaHangNavigation)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MaHangNavigation.MaHang)</dd>
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MaKhuyenMaiNavigation)</dt>
                        <dd class="col-sm-8">
                            @if (Model.MaKhuyenMaiNavigation != null)
                            {
                                @Html.DisplayFor(model => model.MaKhuyenMaiNavigation.MaKhuyenMai)
                            }
                            else
                            {
                                <span>Không có</span>
                            }
                        </dd>
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.MaMauSacNavigation)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.MaMauSacNavigation.MaMauSac)</dd>
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.KichCo)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.KichCo)</dd>
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.KieuKetNoi)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.KieuKetNoi)</dd>
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.KhoangCachKetNoi)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.KhoangCachKetNoi)</dd>
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DungLuongPin)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.DungLuongPin)</dd>
                    </dl>
                    <form method="post" action="@Url.Action("AddToCart", "TrangBanSanPhams")">
                        <input type="hidden" name="MaSanPham" value="@Model.MaSanPham" />
                        <div class="form-group">
                            <label for="SoLuong">Số lượng</label>
                            <input type="number" name="SoLuong" id="SoLuong" class="form-control" value="1" min="1" max="@Model.SoLuongTonKho" />
                        </div>
                        <button type="submit" class="btn btn-primary">Thêm vào giỏ hàng</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
