@model IEnumerable<DuAn1.Models.KhachHang>
@{
    ViewData["Title"] = "Danh sách khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center text-primary mb-4">Danh sách khách hàng</h1>

    <div class="row mb-3">
        <div class="col-md-8">
            <form method="get" asp-action="Index">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm theo tên hoặc số điện thoại" value="@Context.Request.Query["searchString"]" />
                    <button class="btn btn-primary" type="submit">Tìm kiếm</button>
                </div>
            </form>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-success">+ Tạo mới khách hàng</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-bordered table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Mã KH</th>
                        <th>Họ Tên</th>
                        <th>Số ĐT</th>
                        <th>Địa Chỉ</th>
                        <th>Giới Tính</th>
                        <th>Trạng Thái</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MaKhachHang</td>
                            <td>@item.HoTen</td>
                            <td>@item.Sdt</td>
                            <td>@item.DiaChi</td>
                            <td>@item.GioiTinh</td>
                            <td>
                                @if (item.TrangThai == "Đang hoạt động")
                                {
                                    <span class="badge bg-success">@item.TrangThai</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@item.TrangThai</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.MaKhachHang" class="btn btn-sm btn-info me-1">
                                    Chi tiết
                                </a>
                                @if (item.TrangThai == "Đang hoạt động")
                                {
                                    <form method="post" asp-action="Deactivate" asp-route-id="@item.MaKhachHang" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-warning" onclick="return confirm('Bạn có chắc chắn muốn ngừng hoạt động khách hàng này?');">
                                            Ngừng
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <form method="post" asp-action="Activate" asp-route-id="@item.MaKhachHang" style="display:inline;">
                                        <button type="submit" class="btn btn-sm btn-success" onclick="return confirm('Bạn có chắc chắn muốn kích hoạt khách hàng này?');">
                                            Kích hoạt
                                        </button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    @for (int i = 1; i <= Math.Ceiling((double)ViewBag.TotalRecords / ViewBag.PageSize); i++)
                    {
                        <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchString="@Context.Request.Query["searchString"]">@i</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
</div>

