@model IEnumerable<DuAn1.Models.KhachHang>
@{
    ViewData["Title"] = "Danh sách khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Danh sách khách hàng</h1>

<form method="get" asp-action="Index" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm theo tên hoặc số điện thoại" value="@Context.Request.Query["searchString"]" />
        <button class="btn btn-primary" type="submit">Tìm kiếm</button>
    </div>
</form>

<a asp-action="Create" class="btn btn-success mb-3">Tạo mới khách hàng</a>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Mã Khách Hàng</th>
            <th>Họ Tên</th>
            <th>Số Điện Thoại</th>
            <th>Địa Chỉ</th>
            <th>Giới Tính</th>
            <th>Trạng Thái</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaKhachHang</td>
                <td>@item.HoTen</td>
                <td>@item.Sdt</td>
                <td>@item.DiaChi</td>
                <td>@item.GioiTinh</td>
                <td>@item.TrangThai</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MaKhachHang" class="btn btn-info">Chi tiết</a>
                    @if (item.TrangThai == "Đang hoạt động")
                    {
                        <form method="post" asp-action="Deactivate" asp-route-id="@item.MaKhachHang" style="display:inline;">
                            <button type="submit" class="btn btn-warning" onclick="return confirm('Bạn có chắc chắn muốn ngừng hoạt động khách hàng này?');">Ngừng</button>
                        </form>
                    }
                    else
                    {
                        <form method="post" asp-action="Activate" asp-route-id="@item.MaKhachHang" style="display:inline;">
                            <button type="submit" class="btn btn-success" onclick="return confirm('Bạn có chắc chắn muốn kích hoạt khách hàng này?');">Kích hoạt</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @for (int i = 1; i <= Math.Ceiling((double)ViewBag.TotalRecords / ViewBag.PageSize); i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchString="@Context.Request.Query["searchString"]">@i</a>
            </li>
        }
    </ul>
</nav>

<style>
    .table th, .table td {
        padding: 8px;
        text-align: center;
    }

    .table th {
        background-color: #e9ecef;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .btn {
        padding: 6px 12px;
        font-size: 14px;
    }

    .btn-primary {
        background-color: #007bff;
        color: white;
    }

    .btn-success {
        background-color: #28a745;
        color: white;
    }

    .btn-warning {
        background-color: #ffc107;
        color: black;
    }

    .pagination .page-link {
        padding: 6px 12px;
    }

    .pagination .active .page-link {
        background-color: #007bff;
        border-color: #007bff;
    }
</style>