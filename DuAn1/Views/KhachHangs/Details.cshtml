@model DuAn1.Models.KhachHang
@{
    ViewData["Title"] = "Thông tin khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="customer-details">
    <h1><i class="bi bi-person-circle"></i> Thông tin khách hàng</h1>

    <dl class="row">
        <dt class="col-sm-2">Họ Tên</dt>
        <dd class="col-sm-10">@Model.HoTen</dd>

        <dt class="col-sm-2">Số Điện Thoại</dt>
        <dd class="col-sm-10">@Model.Sdt</dd>

        <dt class="col-sm-2">Địa Chỉ</dt>
        <dd class="col-sm-10">@Model.DiaChi</dd>

        <dt class="col-sm-2">Giới Tính</dt>
        <dd class="col-sm-10">
            <span class="badge bg-primary">@Model.GioiTinh</span>
        </dd>

        <dt class="col-sm-2">Trạng Thái</dt>
        <dd class="col-sm-10">
            @if (Model.TrangThai == "Đang hoạt động")
            {
                <span class="badge bg-success">@Model.TrangThai</span>
            }
            else
            {
                <span class="badge bg-secondary">@Model.TrangThai</span>
            }
        </dd>
    </dl>

    <h4><i class="bi bi-clock-history"></i> Lịch sử mua hàng</h4>

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Mã HĐ</th>
                <th>Ngày Tạo</th>
                <th>Thành Tiền</th>
                <th>Trạng Thái</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.HoaDons != null && Model.HoaDons.Any())
            {
                foreach (var hoaDon in Model.HoaDons)
                {
                    <tr>
                        <td>@hoaDon.MaHoaDon</td>
                        <td>@hoaDon.NgayTao?.ToString("dd/MM/yyyy")</td>
                        <td>@string.Format("{0:N0} ₫", hoaDon.ThanhTien)</td>
                        <td>
                            @{
                                string statusClass = hoaDon.TrangThai switch
                                {
                                    "Đã thanh toán" => "success",
                                    "Đang xử lý" => "warning",
                                    "Đã hủy" => "danger",
                                    _ => "secondary"
                                };
                            }
                            <span class="badge bg-@statusClass">@hoaDon.TrangThai</span>
                        </td>
                        <td>
                            <a asp-controller="QuanLyHoaDon" asp-action="Details" asp-route-id="@hoaDon.MaHoaDon" class="btn btn-info btn-sm">
                                Xem chi tiết
                            </a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">Khách hàng chưa có hóa đơn nào.</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end mt-3">
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại danh sách</a>
    </div>
</div>

<!-- Nhúng Bootstrap Icons nếu chưa có -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
