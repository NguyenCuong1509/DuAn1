@model DuAn1.Models.KhachHang
@{
    ViewData["Title"] = "Chi tiết khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Chi tiết khách hàng</h1>

<dl class="row">
    <dt class="col-sm-2">Họ Tên</dt>
    <dd class="col-sm-10">@Model.HoTen</dd>
    <dt class="col-sm-2">Số Điện Thoại</dt>
    <dd class="col-sm-10">@Model.Sdt</dd>
    <dt class="col-sm-2">Địa Chỉ</dt>
    <dd class="col-sm-10">@Model.DiaChi</dd>
    <dt class="col-sm-2">Giới Tính</dt>
    <dd class="col-sm-10">@Model.GioiTinh</dd>
    <dt class="col-sm-2">Trạng Thái</dt>
    <dd class="col-sm-10">@Model.TrangThai</dd>
    <dt class="col-sm-2">Username</dt>
    <dd class="col-sm-10">@Model.Username</dd>
    <dt class="col-sm-2">Mã Giỏ Hàng</dt>
    <dd class="col-sm-10">@(Model.GioHang?.MaGioHang ?? "Chưa có giỏ hàng")</dd>
</dl>

<h4>Danh sách hóa đơn</h4>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Mã Hóa Đơn</th>
            <th>Ngày Tạo</th>
            <th>Thành Tiền</th>
            <th>Trạng Thái</th>
            <th>Chức năng</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hoaDon in Model.HoaDons)
        {
            <tr>
                <td>@hoaDon.MaHoaDon</td>
                <td>@hoaDon.NgayTao?.ToString("dd/MM/yyyy")</td>
                <td>@hoaDon.ThanhTien</td>
                <td>@hoaDon.TrangThai</td>
                <td>
                    <a asp-controller="QuanLyHoaDon" asp-action="Details" asp-route-id="@hoaDon.MaHoaDon" class="btn btn-info">Chi tiết</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .row {
        margin-bottom: 8px;
    }

    .table th, .table td {
        padding: 8px;
        text-align: center;
    }

    .table th {
        background-color: #e9ecef;
    }

    .table tbody tr:hover {
        background-color: #f8f9fa;
    }

    .btn-info {
        background-color: #17a2b8;
        color: white;
        padding: 6px 12px;
    }
</style>