@model DuAn1.Models.Hang

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Hang</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaHang" class="control-label"></label>
                <input asp-for="MaHang" class="form-control" />
                <span asp-validation-for="MaHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenHang" class="control-label"></label>
                <input asp-for="TenHang" class="form-control" />
                <span asp-validation-for="TenHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Website" class="control-label"></label>
                <input asp-for="Website" class="form-control" />
                <span asp-validation-for="Website" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TinhNang" class="control-label"></label>
                <input asp-for="TinhNang" class="form-control" />
                <span asp-validation-for="TinhNang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrangThai" class="control-label"></label>
                <select asp-for="TrangThai" class="form-control">
                    <option value="1">Đang hợp tác</option>
                    <option value="0">Ngừng hợp tác</option>
                </select>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<style>
    /* Form Container */
    form {
        background-color: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

        /* Labels */
        form label {
            font-weight: 600;
            margin-bottom: 6px;
            display: inline-block;
            color: #333;
        }

        /* Inputs & Select */
        form .form-control {
            border: 1px solid #ccc;
            border-radius: 8px;
            padding: 10px 12px;
            font-size: 16px;
            transition: border-color 0.3s ease;
            width: 100%;
        }

            form .form-control:focus {
                border-color: #007bff;
                outline: none;
                box-shadow: 0 0 0 2px rgba(0,123,255,0.1);
            }

    /* Error messages */
    .text-danger {
        font-size: 14px;
        margin-top: 4px;
        color: #e74c3c;
    }

    /* Submit Button */
    form .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 8px;
        transition: background-color 0.3s ease;
        width: 100%;
    }

        form .btn-primary:hover {
            background-color: #0056b3;
        }

    /* Page title */
    h1 {
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    /* Section Heading */
    h4 {
        font-size: 20px;
        font-weight: 500;
        color: #555;
    }

    /* Back to List link */
    a {
        display: inline-block;
        margin-top: 15px;
        text-decoration: none;
        color: #007bff;
        transition: color 0.2s;
    }

        a:hover {
            color: #0056b3;
        }
</style>