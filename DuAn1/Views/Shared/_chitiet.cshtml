@{
    var username = Context.Session.GetString("Username");
    var makh = Context.Session.GetString("MaKhachHang");
}
<!DOCTYPE html>
<html lang="zxx">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="Ashion Template">
    <meta name="keywords" content="Ashion, unica, creative, html">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Ashion | Template</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Cookie&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800;900&display=swap"
          rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Css Styles -->
    <link rel="stylesheet" href="~/css2/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="~/css2/font-awesome.min.css" type="text/css">
    <link rel="stylesheet" href="~/css2/elegant-icons.css" type="text/css">
    <link rel="stylesheet" href="~/css2/jquery-ui.min.css" type="text/css">
    <link rel="stylesheet" href="~/css2/magnific-popup.css" type="text/css">
    <link rel="stylesheet" href="~/css2/owl.carousel.min.css" type="text/css">
    <link rel="stylesheet" href="~/css2/slicknav.min.css" type="text/css">
    <link rel="stylesheet" href="~/css2/style.css" type="text/css">

    <style>
        .categories__text h1,
        .categories__text h4,
        .categories__text p,
        .categories__text a {
            color: white; /* Đặt màu văn bản thành trắng */
        }
        /* Chỉ hiển thị form tìm kiếm khi có lớp d-block */
        #search-form.d-none {
            display: none;
        }

        #search-form.d-block {
            display: block;
            position: absolute;
            top: 50px; /* Điều chỉnh vị trí của form tìm kiếm */
            left: 0;
            width: 100%;
            z-index: 999;
        }
       
    </style>
</head>

<body>
    <!-- Page Preloder -->
    <div id="preloder">
        <div class="loader"></div>
    </div>

    <!-- Offcanvas Menu Begin -->
    <div class="offcanvas-menu-overlay"></div>
    <div class="offcanvas-menu-wrapper">
        <div class="offcanvas__close">+</div>
        <ul class="offcanvas__widget">
            <!-- Biểu tượng kính lúp -->
            <li><i class="fa-solid fa-magnifying-glass" id="search-icon"></i></li>

            <!-- Form tìm kiếm (ẩn khi chưa bấm vào biểu tượng) -->
            <form method="get" asp-action="Index" id="search-form" class="d-none" style="margin-top: -13px;">
                <div class="input-group">
                    <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm theo tên sản phẩm" />
                    <span class="input-group-btn">
                        <button class="btn btn-primary" type="submit">Tìm kiếm</button>
                    </span>
                </div>
            </form>

            <li>
                <a asp-controller="GioHang" asp-action="Index"><i class="fa-solid fa-cart-shopping">Giỏ hàng</i></a>
            </li>
        </ul>
        <div class="offcanvas__logo">
            <a href="./index.html"><img src="~/img/logo.png" alt=""></a>
        </div>
        <div id="mobile-menu-wrap"></div>
        <div class="offcanvas__auth">
            <a href="#">Đăng nhập</a>
            <a href="#">Đăng ký</a>
        </div>
    </div>
    <!-- Offcanvas Menu End -->
    <!-- Header Section Begin -->
    <header class="header">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-3 col-lg-2">
                    <div class="header__logo">
                        <a asp-controller="TrangBanSanPhams" asp-action="Index"><img src="~/img/logo.png" alt=""></a>
                    </div>
                </div>
                <div class="col-xl-6 col-lg-7">
                    <nav class="header__menu">
                        <ul>
                            <li><a asp-controller="TrangBanSanPhams" asp-action="Index" style="text-decoration: none;">Trang chủ</a></li>
                            <li><a asp-controller="TrangBanSanPhams" asp-action="CuaHang" style="text-decoration: none;">Cửa hàng</a></li>
                            <li><a asp-controller="TrangBanSanPhams" asp-action="LienHe" style="text-decoration: none;">Liên hệ</a></li>
                        </ul>
                    </nav>
                </div>
                <div class="col-lg-3">                    
                    <div class="header__right">
                        @if (!string.IsNullOrEmpty(username))
                        {
                            <div class="header__right__auth">
                                <a asp-controller="TaiKhoanKhachHang" asp-route-id="@makh" asp-action="Details" style="text-decoration: none;">Xin chào, @username</a>
                                <a href="/DangNhap/Logout" style="text-decoration: none;">Đăng xuất</a>
                            </div>
                            
                            <ul class="header__right__widget">
                                <li>
                                    <a asp-controller="GioHang" asp-action="Index" style="text-decoration: none;">Giỏ hàng<i class="fa-solid fa-cart-shopping"></i></a>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <div class="header__right__auth">
                                <a href="/DangNhap/DangNhap" style="text-decoration: none;">Đăng nhập</a>
                                <a href="/DangKyTaiKhoan/Create" style="text-decoration: none;">Đăng ký</a>
                            </div>
                            
                        }
                    </div>                   
                </div>
            </div>
        </div>
    </header>
    <!-- Header Section End -->
  
    <div class="container">
        @RenderBody()  <!-- Khu vực nội dung sẽ được chèn vào -->
    </div>

    <!-- Footer Section Begin -->
    <footer class="footer" style="position: static;background-color: white;">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-7">
                    <div class="footer__about">
                        <div class="footer__logo">
                            <a asp-controller="TrangBanSanPhams" asp-action="Index"><img src="~/img/logo.png" alt=""></a>
                        </div>
                        <p>Chào mừng bạn đến với <b>WEBSITE BÁN TAI NGHE ONLINE</b> - nơi mang đến cho bạn những sản phẩm chất lượng nhất với giá cả hợp lý, phục vụ nhu cầu mua sắm của bạn mọi lúc, mọi nơi</p>
                    </div>
                </div>
                <div class="col-lg-2 col-md-3 col-sm-5">
                    <div class="footer__widget">
                        <h6>LIÊN KẾT NHANH</h6>
                        <ul>
                            <li><a asp-controller="TrangBanSanPhams" asp-action="Index" style="text-decoration: none;">Trang chủ</a></li>
                            <li><a asp-controller="TrangBanSanPhams" asp-action="CuaHang" style="text-decoration: none;">Cửa hàng</a></li>
                            <li><a asp-controller="TrangBanSanPhams" asp-action="LienHe" style="text-decoration: none;">Liên hệ</a></li>                            
                        </ul>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    <div class="footer__copyright__text">
                        <p>Năm <script>document.write(new Date().getFullYear());</script> |<b>WEBSITE BÁN TAI NGHE ONLINE</b> | Phát triển phần mềm <i class="fa fa-heart" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank" style="text-decoration: none;">Nhóm 8</a></p>
                    </div>
                    <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                </div>
            </div>
        </div>
    </footer>
    <!-- Footer Section End -->
    <!-- Search Begin -->
    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch">+</div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Search here.....">
            </form>
        </div>
    </div>
    <!-- Search End -->
    <!-- Js Plugins -->
    <script src="~/js2/jquery-3.3.1.min.js"></script>
    <script src="~/js2/bootstrap.min.js"></script>
    <script src="~/js2/jquery.magnific-popup.min.js"></script>
    <script src="~/js2/jquery-ui.min.js"></script>
    <script src="~/js2/mixitup.min.js"></script>
    <script src="~/js2/jquery.countdown.min.js"></script>
    <script src="~/js2/jquery.slicknav.js"></script>
    <script src="~/js2/owl.carousel.min.js"></script>
    <script src="~/js2/jquery.nicescroll.min.js"></script>
    <script src="~/js2/main.js"></script>
    <script>
        document.getElementById('search-icon').addEventListener('click', function () {
            var form = document.getElementById('search-form');
            // Toggle form tìm kiếm
            form.classList.toggle('d-none');
            form.classList.toggle('d-block');
        });
    </script>

</body>

</html>