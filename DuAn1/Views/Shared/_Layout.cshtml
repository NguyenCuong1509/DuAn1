    <style>
        /* Styles cho layout mới */
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f9;
            display: flex;
        }

        header {
            background-color: #333;
            color: #fff;
            padding: 15px 20px;
            width: 100%;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
        }

        h1 {
            margin: 0;
            font-size: 24px;
        }

        nav {
            width: 220px;
            background-color: #444;
            height: 100vh;
            position: fixed;
            padding-top: 20px;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.2);
            transition: width 0.3s ease;
        }

            nav:hover {
                width: 250px; /* Mở rộng menu khi hover */
            }

            nav ul {
                list-style-type: none;
                margin: 0;
                padding: 0;
            }

                nav ul li {
                    margin: 15px 0;
                }

                    nav ul li a {
                        color: #fff;
                        text-decoration: none;
                        font-size: 18px;
                        padding: 10px 20px;
                        display: block;
                        border-radius: 5px;
                        transition: background-color 0.3s, padding 0.3s; /* Thêm hiệu ứng chuyển động */
                    }

                        nav ul li a:hover {
                            background-color: #666;
                            padding-left: 25px; /* Thêm khoảng cách bên trái khi hover */
                        }

        main {
            margin-left: 240px;
            padding: 20px;
            flex-grow: 1;
            text-align: center;
            transition: margin-left 0.3s ease; /* Hiệu ứng chuyển động cho main */
        }

        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 10px 0;
            position: fixed;
            bottom: 0;
            width: 100%;
            box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.2);
        }
    </style>
</head>
