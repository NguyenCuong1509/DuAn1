@{
    Layout = "~/Views/Shared/NewLayout.cshtml";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trang Chủ - Tai Nghe Online</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }
        .navbar {
            background-color: #343a40;
        }
        .navbar a {
            color: white;
            text-decoration: none;
        }
        .product-card img {
            max-height: 200px;
            object-fit: cover;
        }
        .footer {
            background-color: #343a40;
            color: white;
            text-align: center;
            padding: 20px 0;
            position: fixed;
            width: 100%;
            bottom: 0;
        }
        .search-bar {
            width: 300px;
        }
    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">Tai Nghe Online</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" id="cart-icon" data-bs-toggle="modal" data-bs-target="#cartModal">
                            <i class="bi bi-cart-fill"></i> Giỏ hàng
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Tài khoản</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Đăng xuất</a>
                    </li>
                </ul>
            </div>
            <!-- Tìm kiếm sản phẩm -->
            <div class="d-flex">
                <input type="text" class="form-control search-bar" placeholder="Tìm kiếm sản phẩm...">
            </div>
        </div>
    </nav>

    <!-- Sản phẩm nổi bật -->
    <div class="container my-5">
        <h2 class="text-center mb-4">Sản phẩm tai nghe nổi bật</h2>
        <div class="row">
            <!-- Product Card 1 -->
            <div class="col-md-4">
                <div class="card product-card">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Tai nghe Sony">
                    <div class="card-body">
                        <h5 class="card-title">Tai Nghe Sony WH-1000XM5</h5>
                        <p class="card-text">Tai nghe Sony WH-1000XM5 với chất lượng âm thanh vượt trội và khả năng chống ồn tuyệt vời.</p>
                        <p class="card-text"><strong>Giá: 8,500,000 VNĐ</strong></p>
                        <a href="#" class="btn btn-primary" onclick="addToCart('Tai Nghe Sony WH-1000XM5', 8500000)">Thêm vào giỏ hàng</a>
                    </div>
                </div>
            </div>

            <!-- Product Card 2 -->
            <div class="col-md-4">
                <div class="card product-card">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Tai nghe Bose">
                    <div class="card-body">
                        <h5 class="card-title">Tai Nghe Bose QuietComfort 35 II</h5>
                        <p class="card-text">Bose QuietComfort 35 II - Tai nghe chống ồn với âm thanh chất lượng cao.</p>
                        <p class="card-text"><strong>Giá: 6,500,000 VNĐ</strong></p>
                        <a href="#" class="btn btn-primary" onclick="addToCart('Tai Nghe Bose QuietComfort 35 II', 6500000)">Thêm vào giỏ hàng</a>
                    </div>
                </div>
            </div>

            <!-- Product Card 3 -->
            <div class="col-md-4">
                <div class="card product-card">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Tai nghe JBL">
                    <div class="card-body">
                        <h5 class="card-title">Tai Nghe JBL Live 650BTNC</h5>
                        <p class="card-text">JBL Live 650BTNC - Tai nghe với âm thanh mạnh mẽ và khả năng chống ồn hiệu quả.</p>
                        <p class="card-text"><strong>Giá: 3,200,000 VNĐ</strong></p>
                        <a href="#" class="btn btn-primary" onclick="addToCart('Tai Nghe JBL Live 650BTNC', 3200000)">Thêm vào giỏ hàng</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Giỏ hàng Modal -->
    <div class="modal fade" id="cartModal" tabindex="-1" aria-labelledby="cartModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cartModalLabel">Giỏ hàng của bạn</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <ul id="cart-items" class="list-group">
                        <!-- Sản phẩm sẽ được thêm vào đây -->
                    </ul>
                    <p class="mt-3"><strong>Tổng tiền: <span id="total-price">0 VNĐ</span></strong></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    <button type="button" class="btn btn-primary">Thanh toán</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <div class="footer">
        <p>&copy; 2024 Tai Nghe Online. All rights reserved.</p>
    </div>
</body>
</html>
