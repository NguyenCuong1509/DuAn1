<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quản Lý Thống Kê</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/css/datepicker3.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" integrity="sha512-Kc323vGBEqzTmouAECnVceyQqyqdsSiqLQISBL29aUW4U/M7pSPA/gEUZQqv1cwx4OnYxTxve5UMg5GT6L4JJg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <style>
        body {
            padding-top: 20px;
        }

        .navbar a {
            color: white;
        }

        .card {
            margin-bottom: 20px;
        }

        .statistics {
            display: flex;
            justify-content: space-between;
            margin-top: 30px;
        }

        .stat {
            text-align: center;
            background-color: white;
            padding: 15px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 22%;
        }

        .stat h3 {
            margin: 0;
        }

        .stat p {
            font-size: 14px;
            color: #888;
        }

        .chart-container {
            position: relative;
            height: 400px;
        }
    </style>
</head>
<body>
    <!-- Main content -->
    <div class="container">

        <!-- Dòng thống kê thu chi và hàng nhập xuất -->
        <div class="row">
            <!-- Thống kê thu chi -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5>Thống Kê Thu Chi</h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="thuChiChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Thống kê hàng nhập xuất -->
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h5>Thống Kê Hàng Nhập Xuất</h5>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="hangNhapXuatChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Thống kê theo ngày, tuần, tháng, năm -->
        <div class="statistics">
            <div class="stat">
                <h3>Ngày</h3>
                <p>Thống kê theo ngày</p>
            </div>
            <div class="stat">
                <h3>Tuần</h3>
                <p>Thống kê theo tuần</p>
            </div>
            <div class="stat">
                <h3>Tháng</h3>
                <p>Thống kê theo tháng</p>
            </div>
            <div class="stat">
                <h3>Năm</h3>
                <p>Thống kê theo năm</p>
            </div>
        </div>

    </div>
</body>
</html>
