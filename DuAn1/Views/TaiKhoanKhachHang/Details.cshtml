@model DuAn1.Models.KhachHang

@{
    ViewData["Title"] = "Thông tin cá nhân";
    Layout = "~/Views/Shared/_chitiet.cshtml";
}

<div class="customer-details">
    <h1>Thông tin cá nhân</h1>

    <dl class="row">
        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.HoTen)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.HoTen)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Sdt)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Sdt)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.DiaChi)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.DiaChi)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.GioiTinh)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.GioiTinh)</dd>

        <dt class="col-sm-2">@Html.DisplayNameFor(m => m.Username)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(m => m.Username)</dd>
    </dl>

    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editModal"
            data-id="@Model.MaKhachHang"
            data-ten="@Model.HoTen"
            data-sdt="@Model.Sdt"
            data-diachi="@Model.DiaChi"
            data-gioitinh="@Model.GioiTinh"
            data-username="@Model.Username"
            data-password="@Model.Password">
        Cập nhật thông tin
    </button>

    <h4>Lịch sử mua hàng</h4>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Mã Hóa Đơn</th>
                <th>Ngày Tạo</th>
                <th>Thành Tiền</th>
                <th>Trạng Thái</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hoaDon in Model.HoaDons)
            {
                <tr>
                    <td>@hoaDon.MaHoaDon</td>
                    <td>@hoaDon.NgayTao?.ToString("dd/MM/yyyy")</td>
                    <td>@string.Format("{0:N0} ₫", hoaDon.ThanhTien)</td>
                    <td>@hoaDon.TrangThai</td>
                    <td>
                        <a asp-controller="GioHang" asp-action="XemHoaDon" asp-route-maHoaDon="@hoaDon.MaHoaDon" class="btn btn-info">Xem chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal chỉnh sửa thông tin khách hàng -->
<div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form id="editForm" asp-action="Edit" asp-controller="TaiKhoanKhachHang" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" id="khachHangId" name="MaKhachHang" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="tenKhachHang" class="form-label">Họ và tên</label>
                        <input type="text" class="form-control" id="tenKhachHang" name="HoTen" required />
                        <span class="text-danger" asp-validation-for="HoTen"></span>
                    </div>
                    <div class="mb-3">
                        <label for="soDienThoai" class="form-label">Số điện thoại</label>
                        <input type="text" class="form-control" id="soDienThoai" name="Sdt" required />
                        <span class="text-danger" asp-validation-for="Sdt"></span>
                    </div>
                    <div class="mb-3">
                        <label for="diaChi" class="form-label">Địa chỉ</label>
                        <input type="text" class="form-control" id="diaChi" name="DiaChi" required />
                        <span class="text-danger" asp-validation-for="DiaChi"></span>
                    </div>
                    <div class="mb-3">
                        <label for="gioiTinh" class="form-label">Giới tính</label>
                        <select class="form-control" id="gioiTinh" name="GioiTinh" required>
                            <option value="Nam">Nam</option>
                            <option value="Nữ">Nữ</option>
                        </select>
                        <span class="text-danger" asp-validation-for="GioiTinh"></span>
                    </div>
                    <div class="mb-3">
                        <label for="username" class="form-label">Tên đăng nhập</label>
                        <input type="text" class="form-control" id="username" name="Username" required />
                        <span class="text-danger" asp-validation-for="Username"></span>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Mật khẩu</label>
                        <input type="password" class="form-control" id="password" name="Password" required />
                        <span class="text-danger" asp-validation-for="Password"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Điền dữ liệu vào modal
    const editModal = document.getElementById('editModal');
    editModal.addEventListener('show.bs.modal', function (event) {
        const button = event.relatedTarget;
        const id = button.getAttribute('data-id');
        const ten = button.getAttribute('data-ten');
        const sdt = button.getAttribute('data-sdt');
        const diachi = button.getAttribute('data-diachi');
        const gioitinh = button.getAttribute('data-gioitinh');
        const username = button.getAttribute('data-username');
        const password = button.getAttribute('data-password');

        if (!id) {
            console.error('data-id is missing or null');
            alert('Lỗi: Không tìm thấy mã khách hàng.');
            return;
        }

        document.getElementById('khachHangId').value = id;
        document.getElementById('tenKhachHang').value = ten || '';
        document.getElementById('soDienThoai').value = sdt || '';
        document.getElementById('diaChi').value = diachi || '';
        document.getElementById('gioiTinh').value = gioitinh || 'Nam';
        document.getElementById('username').value = username || '';
        document.getElementById('password').value = password || '';
    });

    // Xử lý submit form qua AJAX
    document.getElementById('editForm').addEventListener('submit', async function (e) {
        e.preventDefault();
        const form = e.target;

        if (!form.checkValidity()) {
            form.reportValidity();
            return;
        }

        const formData = new FormData(form);
        const id = document.getElementById('khachHangId').value;

        const response = await fetch(`${form.action}/${id}`, {
            method: form.method,
            body: formData,
            headers: {
                'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
            }
        });

        const result = await response.json();
        if (result.success) {
            window.location.href = result.redirectUrl;
        } else {
            alert(result.message);
        }
    });
</script>

