@model DuAn1.Models.QuanLy

@{
    ViewData["Title"] = "Chỉnh Sửa Thông Tin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f4f6f9;
    }

    .form-container {
        max-width: 550px;
        margin: 40px auto;
        background: #fff;
        border-radius: 15px;
        padding: 25px 30px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    }

        .form-container h2 {
            text-align: center;
            color: #007bff;
            font-weight: bold;
            margin-bottom: 20px;
        }

    .form-group label {
        font-weight: 600;
        color: #444;
    }

    .form-control {
        border-radius: 8px;
        padding: 10px;
        margin-top: 5px;
    }

    .btn-submit {
        width: 100%;
        padding: 12px;
        background: linear-gradient(135deg, #28a745, #00c851);
        color: #fff;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        margin-top: 10px;
        transition: background 0.3s ease-in-out;
    }

        .btn-submit:hover {
            background: linear-gradient(135deg, #1f7a34, #009c3e);
        }

    .back-link {
        display: inline-block;
        margin-top: 15px;
        text-decoration: none;
        color: #007bff;
        font-weight: 500;
    }

        .back-link:hover {
            text-decoration: underline;
        }

    .input-icon {
        position: relative;
    }

        .input-icon i {
            position: absolute;
            top: 50%;
            left: 10px;
            transform: translateY(-50%);
            color: #aaa;
        }

        .input-icon input,
        .input-icon select {
            padding-left: 35px;
        }
</style>

<div class="form-container">
    <h2><i class="fas fa-user-edit"></i> Chỉnh Sửa Quản Lý</h2>
    <hr />

    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
        <input type="hidden" asp-for="MaQuanLy" />

        <div class="form-group input-icon">
            <label asp-for="TenQuanLy"></label>
            <i class="fas fa-user"></i>
            <input asp-for="TenQuanLy" class="form-control" placeholder="Nhập tên quản lý..." />
            <span asp-validation-for="TenQuanLy" class="text-danger"></span>
        </div>

        <div class="form-group input-icon">
            <label asp-for="NgaySinh"></label>
            <i class="fas fa-calendar-alt"></i>
            <input asp-for="NgaySinh" type="date" class="form-control" />
            <span asp-validation-for="NgaySinh" class="text-danger"></span>
        </div>

        <div class="form-group input-icon">
            <label asp-for="DiaChi"></label>
            <i class="fas fa-map-marker-alt"></i>
            <input asp-for="DiaChi" class="form-control" placeholder="Nhập địa chỉ..." />
            <span asp-validation-for="DiaChi" class="text-danger"></span>
        </div>

        <div class="form-group input-icon">
            <label asp-for="GioiTinh"></label>
            <i class="fas fa-venus-mars"></i>
            <select asp-for="GioiTinh" class="form-control" style="height: auto">
                <option value="Nam" selected="@((Model.GioiTinh == "Nam") ? "selected" : null)">Nam</option>
                <option value="Nữ" selected="@((Model.GioiTinh == "Nữ") ? "selected" : null)">Nữ</option>
            </select>
            <span asp-validation-for="GioiTinh" class="text-danger"></span>
        </div>

        <div class="form-group input-icon" hidden>
            <label asp-for="TrangThai"></label>
            <i class="fas fa-toggle-on"></i>
            <input asp-for="TrangThai" class="form-control" />
            <span asp-validation-for="TrangThai" class="text-danger"></span>
        </div>

        <div class="form-group input-icon">
            <label asp-for="Username"></label>
            <i class="fas fa-user-circle"></i>
            <input asp-for="Username" class="form-control" placeholder="Tên đăng nhập..." />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group input-icon">
            <label asp-for="Password"></label>
            <i class="fas fa-lock"></i>
            <input asp-for="Password" type="password" class="form-control" placeholder="Mật khẩu..." />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type="submit" class="btn-submit"><i class="fas fa-save"></i> Lưu Thay Đổi</button>
    </form>

    <a asp-action="Details" asp-route-id="@Model?.MaQuanLy" class="back-link"><i class="fas fa-arrow-left"></i> Quay lại chi tiết</a>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
