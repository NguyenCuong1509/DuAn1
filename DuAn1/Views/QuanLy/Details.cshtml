@model DuAn1.Models.QuanLy

@{
    ViewData["Title"] = "Chi Tiết Cá Nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f4f6f9;
    }

    .profile-container {
        max-width: 700px;
        margin: 50px auto;
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
        padding: 30px;
        text-align: center;
        transition: all 0.3s ease-in-out;
    }

        .profile-container:hover {
            transform: translateY(-5px);
        }

    .profile-header {
        background: linear-gradient(135deg, #007bff, #00bfff);
        padding: 40px 20px;
        color: #fff;
        border-radius: 15px 15px 0 0;
        margin: -30px -30px 30px -30px;
    }

        .profile-header h2 {
            margin: 10px 0 0;
            font-size: 26px;
        }

    .profile-details {
        text-align: left;
        padding: 0 20px;
    }

    .detail-item {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px solid #eee;
    }

        .detail-item:last-child {
            border-bottom: none;
        }

    .detail-label {
        font-weight: bold;
        color: #555;
    }

    .detail-value {
        color: #333;
    }

    .btn-edit {
        background: #17a2b8;
        color: white;
        padding: 10px 20px;
        border-radius: 8px;
        border: none;
        margin-top: 20px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
        transition: background 0.3s ease-in-out;
    }

        .btn-edit:hover {
            background: #138496;
        }

    .profile-avatar {
        width: 100px;
        height: 100px;
        background-color: #fff;
        border-radius: 50%;
        margin: 0 auto 15px;
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        box-shadow: 0 3px 8px rgba(0,0,0,0.1);
    }

        .profile-avatar i {
            font-size: 50px;
            color: #007bff;
        }
</style>

<div class="profile-container">
    <div class="profile-header">
        <div class="profile-avatar">
            <i class="fas fa-user" style="color:#007bff;"></i>
        </div>
        <h2>@Html.DisplayFor(model => model.TenQuanLy)</h2>
    </div>

    <div class="profile-details">
        <div class="detail-item">
            <span class="detail-label">Ngày Sinh:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.NgaySinh)</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Địa Chỉ:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.DiaChi)</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Giới Tính:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.GioiTinh)</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Username:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.Username)</span>
        </div>
        <div class="detail-item">
            <span class="detail-label">Password:</span>
            <span class="detail-value">@Html.DisplayFor(model => model.Password)</span>
        </div>
    </div>

    <a asp-action="Edit" asp-route-id="@Model?.MaQuanLy" class="btn-edit">
        <i class="fas fa-edit"></i> Chỉnh Sửa
    </a>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
