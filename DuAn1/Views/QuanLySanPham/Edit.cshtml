@model DuAn1.Models.SanPham

@{
    ViewData["Title"] = "Sửa sản phẩm";
}

<h1>Sửa sản phẩm</h1>

<h4>Sản phẩm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaSanPham" />
            <div class="form-group">
                <label asp-for="TenSanPham" class="control-label"></label>
                <input asp-for="TenSanPham" class="form-control" />
                <span asp-validation-for="TenSanPham" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HinhMinhHoa" class="control-label"></label>
                <!-- Hiển thị ảnh hiện tại -->
                @if (!string.IsNullOrEmpty(Model.HinhMinhHoa))
                {
                    <div>
                        <img src="@Model.HinhMinhHoa" alt="Hình ảnh hiện tại" style="width: 200px; height: auto;" />
                    </div>
                }
                <div>
                    <label for="HinhMinhHoa">Nhập URL hình ảnh mới (nếu có):</label>
                    <input type="text" name="HinhMinhHoa" class="form-control" placeholder="Nhập URL hình ảnh mới" value="@Model.HinhMinhHoa" />
                </div>
                <span asp-validation-for="HinhMinhHoa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="KichCo" class="control-label"></label>
                <input asp-for="KichCo" class="form-control" />
                <span asp-validation-for="KichCo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KieuKetNoi" class="control-label"></label>
                <select asp-for="KieuKetNoi" class="form-control">
                    <option value="Không dây">Không dây</option>
                    <option value="Có dây">Có dây</option>
                </select>
                <span asp-validation-for="KieuKetNoi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KhoangCachKetNoi" class="control-label"></label>
                <input asp-for="KhoangCachKetNoi" class="form-control" />
                <span asp-validation-for="KhoangCachKetNoi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DungLuongPin" class="control-label"></label>
                <input asp-for="DungLuongPin" class="form-control" />
                <span asp-validation-for="DungLuongPin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonGia" class="control-label"></label>
                <input asp-for="DonGia" class="form-control" />
                <span asp-validation-for="DonGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuongTonKho" class="control-label"></label>
                <input asp-for="SoLuongTonKho" class="form-control" />
                <span asp-validation-for="SoLuongTonKho" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrangThai" class="control-label"></label>
                <input asp-for="TrangThai" class="form-control" />
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaKhuyenMai" class="control-label"></label>
                <select asp-for="MaKhuyenMai" class="form-control" asp-items="ViewBag.MaKhuyenMai"></select>
                <span asp-validation-for="MaKhuyenMai" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaHang" class="control-label"></label>
                <select asp-for="MaHang" class="form-control" asp-items="ViewBag.MaHang"></select>
                <span asp-validation-for="MaHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaMauSac" class="control-label"></label>
                <select asp-for="MaMauSac" class="form-control" asp-items="ViewBag.MaMauSac"></select>
                <span asp-validation-for="MaMauSac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<style>
    body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f7f7f7;
    }

    h1, h4 {
        color: #333;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        border-radius: 8px;
        border: 1px solid #ccc;
        padding: 10px;
        transition: border-color 0.3s ease;
        font-size: 15px;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.3);
        }

    label.control-label {
        font-weight: 600;
        margin-bottom: 6px;
        display: block;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        padding: 10px 20px;
        font-weight: bold;
        border-radius: 6px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .text-danger {
        font-size: 13px;
        color: #dc3545;
    }

    .col-md-4 {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.05);
    }

    img {
        margin-bottom: 10px;
        border: 1px solid #ddd;
        border-radius: 6px;
    }

    a {
        display: inline-block;
        margin-top: 20px;
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }
</style>
