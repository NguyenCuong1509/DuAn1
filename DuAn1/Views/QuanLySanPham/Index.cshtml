@model IEnumerable<DuAn1.Models.SanPham>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}
<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href="#">
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Quản lý sản phẩm</li>
    </ol>
</div><!--/.row-->
<h1>Danh sách sản phẩm</h1>
<!-- Form tìm kiếm -->
<form method="get" asp-action="Index">
    <div class="input-group mb-3">
        <input type="text" name="searchString" class="form-control" placeholder="Tìm kiếm theo tên sản phẩm" />
        <span class="input-group-btn">
            <button class="btn btn-primary" type="submit">Tìm kiếm</button>
        </span>
    </div>
</form>
<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.TenSanPham)</th>
            <th>@Html.DisplayNameFor(model => model.KichCo)</th>
            <th>@Html.DisplayNameFor(model => model.DonGia)</th>
            <th>@Html.DisplayNameFor(model => model.SoLuongTonKho)</th>
            <th>@Html.DisplayNameFor(model => model.TrangThai)</th>
            <th>@Html.DisplayNameFor(model => model.MaHangNavigation)</th>
            <th>@Html.DisplayNameFor(model => model.MaKhuyenMaiNavigation)</th>
            <th>@Html.DisplayNameFor(model => model.MaMauSacNavigation)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.TenSanPham)</td>
                <td>@Html.DisplayFor(modelItem => item.KichCo)</td>
                <td>@Html.DisplayFor(modelItem => item.DonGia)</td>
                <td>@Html.DisplayFor(modelItem => item.SoLuongTonKho)</td>
                <td>@Html.DisplayFor(modelItem => item.TrangThai)</td>
                <td>@Html.DisplayFor(modelItem => item.MaHangNavigation.MaHang)</td>
                <td>@Html.DisplayFor(modelItem => item.MaKhuyenMaiNavigation.MaKhuyenMai)</td>
                <td>@Html.DisplayFor(modelItem => item.MaMauSacNavigation.MaMauSac)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaSanPham">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.MaSanPham">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MaSanPham">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
