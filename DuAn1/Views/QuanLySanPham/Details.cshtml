@model DuAn1.Models.SanPham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chi tiết sản phẩm</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .product-details {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-top: 20px;
        }


        .product-info dt {
            font-weight: bold;
            color: #343a40;
        }

        .product-info dd {
            margin-bottom: 15px;
            color: #495057;
        }

        .product-image {
            position: relative; /* Đặt vị trí tương đối cho khung hình */
            overflow: hidden; /* Ẩn phần hình ảnh vượt ra ngoài khung */
            width: 100%; /* Chiều rộng khung bằng 100% */
            height: 300px; /* Chiều cao cố định cho khung hình */
        }

            .product-image img {
                position: absolute; /* Đặt hình ảnh ở vị trí tuyệt đối */
                top: 50%; /* Định vị từ trên xuống giữa */
                left: 50%; /* Định vị từ trái sang giữa */
                width: auto; /* Để chiều rộng tự động */
                height: 100%; /* Chiều cao bằng 100% của khung */
                transform: translate(-50%, -50%); /* Đưa hình ảnh vào giữa khung */
            }

        .action-links {
            margin-top: 20px;
        }

            .action-links a {
                margin-right: 10px;
            }

    </style>
</head>
<body>
    <div class="row">
        <ol class="breadcrumb" style="width:100%">
            <li>
                <a asp-controller="QuanLy" asp-action="Index">
                    <em class="fa fa-home"></em>
                </a>
            </li>
            <li class="active">
                <a asp-controller="QuanLySanPham" asp-action="Index">
                    <i class="fa-brands fa-buffer"></i>
                    Quản lý sản phẩm
                </a>
            </li>
            <li class="active">
                <a asp-controller="QuanLySanPham" asp-action="Detail">
                    <i class="fa-brands fa-buffer"></i>
                    Chi tiết
                </a>
            </li>
        </ol>
    </div><!--/.row-->
    <div class="container">

        <div class="product-details">
            <hr />
            <dl class="row product-info card">
                <dt class="col-sm-2">Hình ảnh</dt>
                <dd class="col-sm-10 product-image">
                    <img src="@Model.HinhMinhHoa" alt="@Model.TenSanPham" />
                </dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TenSanPham)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.TenSanPham)</dd>
                
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DonGia)</dt>
                <dd class="col-sm-10">@(@Model.DonGia.HasValue ? String.Format("{0:N0}", @Model.DonGia.Value) : "0")</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.SoLuongTonKho)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.SoLuongTonKho)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.TrangThai)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.TrangThai)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.MaHangNavigation)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.MaHangNavigation.MaHang)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.MaKhuyenMaiNavigation)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.MaKhuyenMaiNavigation.MaKhuyenMai)</dd>
                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.MaMauSacNavigation)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.MaMauSacNavigation.MaMauSac)</dd>
                <div class="col-md-12">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            Thêm thông tin
                            <span class="pull-right clickable panel-toggle"><em class="fa fa-toggle-up"></em></span>
                        </div>
                        <div class="panel-body">
                            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.KichCo)</dt>
                            <dd class="col-sm-10">@Html.DisplayFor(model => model.KichCo)</dd>
                            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.KieuKetNoi)</dt>
                            <dd class="col-sm-10">@Html.DisplayFor(model => model.KieuKetNoi)</dd>
                            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.KhoangCachKetNoi)</dt>
                            <dd class="col-sm-10">@Html.DisplayFor(model => model.KhoangCachKetNoi)</dd>
                            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.DungLuongPin)</dt>
                            <dd class="col-sm-10">@Html.DisplayFor(model => model.DungLuongPin)</dd>
                            <dt class="col-sm-2">@Html.DisplayNameFor(model => model.LanSuaGanNhat)</dt>
                            <dd class="col-sm-10">@Html.DisplayFor(model => model.LanSuaGanNhat)</dd>
                        </div>
                    </div>
                </div>
            </dl>
        </div>

        <div class="action-links">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.MaSanPham">Sửa</a>
            <a class="btn btn-secondary" asp-action="Index">Quay lại danh sách</a>
        </div>
    </div>
</body>
</html>
