@model DuAn1.Models.SanPham

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/css/styles.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .product-details {
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            margin-top: 20px;
        }

        .product-info dt {
            font-weight: bold;
            color: #343a40;
        }

        .product-info dd {
            margin-bottom: 15px;
            color: #495057;
        }

        .product-image {
            position: relative;
            overflow: hidden;
            width: 100%;
            height: 300px;
        }

            .product-image img {
                position: absolute;
                top: 50%;
                left: 50%;
                width: auto;
                height: 100%;
                transform: translate(-50%, -50%);
            }

        .action-links {
            margin-top: 20px;
        }

            .action-links a {
                margin-right: 10px;
            }
    </style>
</head>
<body>
    <div class="row">
        <ol class="breadcrumb" style="width:100%">
            <li>
                <a asp-controller="QuanLy" asp-action="Index">
                    <em class="fa fa-home"></em>
                </a>
            </li>
            <li class="active">
                <a asp-controller="QuanLySanPham" asp-action="Index">
                    <i class="fa-brands fa-buffer"></i>
                    Quản lý sản phẩm
                </a>
            </li>
            <li class="active">
                <a asp-controller="QuanLySanPham" asp-action="Detail">
                    <i class="fa-brands fa-buffer"></i>
                    Chi tiết
                </a>
            </li>
        </ol>
    </div><!--/.row-->

    <div class="container">
        <div class="product-details">
            <hr />
            <div class="row">
                <!-- Hình ảnh -->
                <div class="col-sm-6">
                    <dt>Hình ảnh</dt>
                    <dd class="product-image">
                        <img src="@(string.IsNullOrEmpty(Model.HinhMinhHoa) ? "~/images/no-image.png" : Model.HinhMinhHoa)" alt="@(Model.TenSanPham ?? "Sản phẩm")" />
                    </dd>
                </div>

                <!-- Thông tin chi tiết -->
                <div class="col-sm-6">
                    <dl class="row product-info">

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.TenSanPham)</dt>
                        <dd class="col-sm-8">@(Model.TenSanPham ?? "Không có")</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.DonGia)</dt>
                        <dd class="col-sm-8">@(Model.DonGia.HasValue? String.Format("{0:C0}", Model.DonGia.Value) : "0")</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.SoLuongTonKho)</dt>
                        <dd class="col-sm-8">@(Model.SoLuongTonKho ?? 0)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.KieuKetNoi)</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.KieuKetNoi) ? "Không có" : Model.KieuKetNoi)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.KichCo)</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.KichCo) ? "Không có" : Model.KichCo)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.DungLuongPin)</dt>
                        <dd class="col-sm-8">
                            @(Model.DungLuongPin.HasValue? Model.DungLuongPin.Value.ToString() : "0")
                        </dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.KhoangCachKetNoi)</dt>
                        <dd class="col-sm-8">@(string.IsNullOrEmpty(Model.KhoangCachKetNoi) ? "Không có" : Model.KhoangCachKetNoi)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.TrangThai)</dt>
                        <dd class="col-sm-8">@(Model.TrangThai)</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.MaHangNavigation)</dt>
                        <dd class="col-sm-8">@(Model.MaHangNavigation != null ? Model.MaHangNavigation.TenHang : "Không có hãng")</dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.MaKhuyenMaiNavigation)</dt>
                        <dd class="col-sm-8">
                            @(Model.MaKhuyenMaiNavigation != null ? Model.MaKhuyenMaiNavigation.TenKhuyenMai : "Không có mã khuyến mãi")
                        </dd>

                        <dt class="col-sm-4">@Html.DisplayNameFor(m => m.MaMauSacNavigation)</dt>
                        <dd class="col-sm-8">@(Model.MaMauSacNavigation != null ? Model.MaMauSacNavigation.TenMauSac : "Không có màu")</dd>

                        <dt class="col-sm-4">Chọn mã khuyến mãi</dt>
                        <dd class="col-sm-8">
                            <form method="post" asp-action="ApplyPromoCode">
                                <div class="form-group">
                                    <select class="form-control" name="MaKhuyenMai">
                                        <option value="">Chọn mã khuyến mãi</option>
                                        @foreach (var khuyenMai in ViewData["KhuyenMais"] as SelectList)
                                        {
                                            <option value="@khuyenMai.Value">@khuyenMai.Text</option>
                                        }
                                    </select>
                                    <button type="submit" class="btn btn-success mt-2">Áp dụng</button>
                                </div>
                                <input type="hidden" name="MaSanPham" value="@Model.MaSanPham" />
                            </form>
                        </dd>

                    </dl>
                </div>
            </div>
        </div>

        <div class="action-links">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.MaSanPham">Sửa</a>
            <a class="btn btn-secondary" asp-action="Index">Quay lại danh sách</a>
        </div>
    </div>
</body>
</html>
