@model DuAn1.Models.SanPham

@{
    ViewData["Title"] = "Create";
}

<h1>Tạo sản phẩm</h1>

<h4>SanPham</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaSanPham" class="control-label"></label>
                <input asp-for="MaSanPham" class="form-control" />
                <span asp-validation-for="MaSanPham" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenSanPham" class="control-label"></label>
                <input asp-for="TenSanPham" class="form-control" />
                <span asp-validation-for="TenSanPham" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HinhMinhHoa" class="control-label"></label>
                <input asp-for="HinhMinhHoa" class="form-control" placeholder="Nhập URL hình ảnh" />
                <span asp-validation-for="HinhMinhHoa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KichCo" class="control-label"></label>
                <input asp-for="KichCo" class="form-control" />
                <span asp-validation-for="KichCo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KieuKetNoi" class="control-label"></label>
                <select asp-for="KieuKetNoi" class="form-control">
                    <option value="Không dây">Không dây</option>
                    <option value="Có dây">Có dây</option>
                </select>
                <span asp-validation-for="KieuKetNoi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KhoangCachKetNoi" class="control-label"></label>
                <input asp-for="KhoangCachKetNoi" class="form-control" />
                <span asp-validation-for="KhoangCachKetNoi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DungLuongPin" class="control-label"></label>
                <input asp-for="DungLuongPin" class="form-control" />
                <span asp-validation-for="DungLuongPin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DonGia" class="control-label"></label>
                <input asp-for="DonGia" class="form-control" />
                <span asp-validation-for="DonGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuongTonKho" class="control-label"></label>
                <input asp-for="SoLuongTonKho" class="form-control" />
                <span asp-validation-for="SoLuongTonKho" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TrangThai" class="control-label"></label>
                <select asp-for="TrangThai" class="form-control">
                    <option value="Đang kinh doanh">Đang kinh doanh</option>
                    <option value="Ngừng kinh doanh">Ngừng kinh doanh</option>
                </select>
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaKhuyenMai" class="control-label"></label>
                <select asp-for="MaKhuyenMai" class="form-control" asp-items="ViewBag.MaKhuyenMai"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaHang" class="control-label"></label>
                <select asp-for="MaHang" class="form-control" asp-items="ViewBag.MaHang"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaMauSac" class="control-label"></label>
                <select asp-for="MaMauSac" class="form-control" asp-items="ViewBag.MaMauSac"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Quay lại danh sách</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
