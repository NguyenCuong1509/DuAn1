@model DuAn1.Models.HoaDon

@{
    ViewData["Title"] = "Chi tiết hóa đơn";
}

<div class="container mt-4">
    <!-- Trạng thái hiện tại -->
    <h4>
        Trạng thái hiện tại:
        <span class="badge badge-pill
            @(Model.TrangThai == "Chờ xác nhận" ? "badge-warning" :
                            Model.TrangThai == "Bắt đầu giao" ? "badge-primary" :
                            Model.TrangThai == "Giao thành công" ? "badge-success" :
                            "badge-danger")">
            @Model.TrangThai
        </span>
    </h4>

    <!-- Các nút thay đổi trạng thái -->
    <div class="my-3">
        @if (Model.TrangThai == "Chờ xác nhận")
        {
            <form asp-action="ChangeStatus" method="post" class="d-inline">
                <input type="hidden" name="id" value="@Model.MaHoaDon" />
                <input type="hidden" name="newStatus" value="Bắt đầu giao" />
                <button type="submit" class="btn btn-primary btn-sm">🚚 Bắt đầu giao</button>
            </form>
            <form asp-action="ChangeStatus" method="post" class="d-inline">
                <input type="hidden" name="id" value="@Model.MaHoaDon" />
                <input type="hidden" name="newStatus" value="Hủy" />
                <button type="submit" class="btn btn-danger btn-sm">❌ Hủy</button>
            </form>
        }
        else if (Model.TrangThai == "Bắt đầu giao")
        {
            <form asp-action="ChangeStatus" method="post" class="d-inline">
                <input type="hidden" name="id" value="@Model.MaHoaDon" />
                <input type="hidden" name="newStatus" value="Giao thành công" />
                <button type="submit" class="btn btn-success btn-sm">✅ Giao thành công</button>
            </form>
            <form asp-action="ChangeStatus" method="post" class="d-inline">
                <input type="hidden" name="id" value="@Model.MaHoaDon" />
                <input type="hidden" name="newStatus" value="Hủy" />
                <button type="submit" class="btn btn-danger btn-sm">❌ Hủy</button>
            </form>
        }
        else if (Model.TrangThai == "Giao thành công")
        {
            <form asp-action="ChangeStatus" method="post" class="d-inline">
                <input type="hidden" name="id" value="@Model.MaHoaDon" />
                <input type="hidden" name="newStatus" value="Hủy" />
                <button type="submit" class="btn btn-danger btn-sm">❌ Hủy</button>
            </form>
        }
    </div>

    <!-- Thông tin hóa đơn -->
    <h4 class="text-primary">📄 Thông tin hóa đơn</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Mã hóa đơn</dt>
        <dd class="col-sm-9">@Model.MaHoaDon</dd>

        <dt class="col-sm-3">Ngày tạo</dt>
        <dd class="col-sm-9">@Model.NgayTao?y.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">Thành tiền</dt>
        <dd class="col-sm-9">@String.Format("{0:N0} ₫", Model.ThanhTien)</dd>

        <dt class="col-sm-3">Mã giỏ hàng</dt>
        <dd class="col-sm-9">@Model.MaGioHangNavigation?.MaGioHang</dd>

        <dt class="col-sm-3">Mã khách hàng</dt>
        <dd class="col-sm-9">@Model.MaGioHangNavigation?.MaKhachHang</dd>

        <dt class="col-sm-3">Tên khách hàng</dt>
        <dd class="col-sm-9">@Model.MaKhachHangNavigation?.HoTen</dd>

        <dt class="col-sm-3">Số điện thoại</dt>
        <dd class="col-sm-9">@Model.MaKhachHangNavigation?.Sdt</dd>
    </dl>

    <!-- Danh sách sản phẩm -->
    <h4 class="text-success mt-4">📦 Sản phẩm trong hóa đơn</h4>
    <table class="table table-bordered mt-3">
        <thead class="thead-light">
            <tr>
                <th>Sản phẩm</th>
                <th>Số lượng</th>
                <th>Đơn giá</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.HoaDonChiTiets)
            {
                <tr>
                    <td>@item.MaSanPhamNavigation?.TenSanPham</td>
                    <td>@item.SoLuong</td>
                    <td>@String.Format("{0:N0} ₫", item.DonGia)</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-secondary">← Trở về danh sách</a>
    </div>
</div>
